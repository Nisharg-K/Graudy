<head>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link rel="stylesheet" href="/css/styles.css">
</head><html lang="en" data-theme="light">

<div class="content-header">
  <h2>Add New Course</h2>
  <div class="action-buttons">
    <a href="/courses" class="btn btn-secondary">
      <i class="fas fa-arrow-left"></i> Back to List
    </a>
  </div>
</div>

<div class="form-container card-animation">
  <% if (typeof error !== 'undefined') { %>
    <div class="alert alert-danger"><%= error %></div>
  <% } %>
  
  <form action="/courses/add" method="POST">
    <div class="form-row">
      <div class="form-group">
        <label for="courseCode">Course Code*</label>
        <input type="text" id="courseCode" name="courseCode" required value="<%= typeof formData !== 'undefined' ? formData.courseCode : '' %>">
      </div>
      
      <div class="form-group">
        <label for="courseName">Course Name*</label>
        <input type="text" id="courseName" name="courseName" required value="<%= typeof formData !== 'undefined' ? formData.courseName : '' %>">
      </div>
    </div>
    
    <div class="form-row">
      <div class="form-group">
        <label for="credits">Credits</label>
        <input type="number" id="credits" name="credits" min="0" value="<%= typeof formData !== 'undefined' ? formData.credits : '' %>">
      </div>
      
      <div class="form-group">
        <label for="teacher">Teacher</label>
        <input type="text" id="teacher" name="teacher" value="<%= typeof formData !== 'undefined' ? formData.teacher : '' %>">
      </div>
    </div>
    
    <div class="form-group">
      <label for="description">Description</label>
      <textarea id="description" name="description" rows="3"><%= typeof formData !== 'undefined' ? formData.description : '' %></textarea>
    </div>
    
    <div class="form-actions">
      <button type="submit" class="btn btn-primary">
        <i class="fas fa-save"></i> Save Course
      </button>
      <button type="reset" class="btn btn-secondary">
        <i class="fas fa-undo"></i> Reset
      </button>
    </div>
  </form>
</div>