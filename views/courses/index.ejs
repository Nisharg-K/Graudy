
<div class="content-header">
  <h2>Course List</h2>
  <div class="action-buttons">
    <a href="/courses/add" class="btn btn-primary">
      <i class="fas fa-plus"></i> Add Course
    </a>
  </div>
</div>

<div class="table-container">
  <table class="data-table">
    <thead>
      <tr>
        <th>Code</th>
        <th>Name</th>
        <th>Credits</th>
        <th>Teacher</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% if (courses.length === 0) { %>
        <tr>
          <td colspan="5" class="text-center">No courses found</td>
        </tr>
      <% } else { %>
        <% courses.forEach(course => { %>
          <tr class="table-row-animation">
            <td><%= course.courseCode %></td>
            <td><%= course.courseName %></td>
            <td><%= course.credits %></td>
            <td><%= course.teacher %></td>
            <td class="actions">
              <a href="/courses/edit/<%= course._id %>" class="btn btn-sm btn-info">
                <i class="fas fa-edit"></i>
              </a>
              <form action="/courses/delete/<%= course._id %>" method="POST" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this course?');">
                <button type="submit" class="btn btn-sm btn-danger">
                  <i class="fas fa-trash"></i>
                </button>
              </form>
            </td>
          </tr>
        <% }); %>
      <% } %>
    </tbody>
  </table>
</div>